@model Category
<h1>Edit Category</h1>
<br />



<form asp-action="Edit">
   


    <div class="form-group">
        <label asp-for="Name" class="form-label">Category Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="form-label">Category Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>


    <input type="submit" value="Edit Category" class="btn btn-success my-5" />
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back</a>
</form>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
