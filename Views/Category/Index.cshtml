@model IEnumerable<Category>
<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="col">@item.CategoryId</th>
                <th scope="col">@item.Name</th>
                <th scope="col">@item.Description</th>

                <th scope="col">
                    <a href="~/Category/ViewDetails/@item.CategoryId" class="btn btn-primary mx-2">View</a>
                    <a href="~/Category/Edit/@item.CategoryId" class="btn btn-warning mx-2">Edit</a>
                    <a href="~/Category/Delete/@item.CategoryId" class="btn btn-danger mx-2">Delete</a>
                </th>
            </tr>
        }
    </tbody>
    <tfoot>
        <a href="~/Category/Create" class="btn btn-success m-3">Add Category</a>
    </tfoot>
</table>
