@model Product
<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="@Url.Content(Model.ImagePath)" alt="@Model.Title" >
    <div class="card-body">
        <h5 class="card-title">Product Title: @Model.Title</h5>
        <h6 class="card-subtitle mb-2 text-muted">Product Price: @Model.Price</h6>
        <h6 class="card-subtitle mb-2 text-muted">Product Description: @Model.Description</h6>
        <h6 class="card-subtitle mb-2 text-muted">Product Quantity: @Model.Quantity</h6>
        <h6 class="card-subtitle mb-2 text-muted">Category Name: @Model.Category!.Name</h6>
        
        <a href="~/Product/Index" class="btn btn-primary mt-4">Back</a>
    </div>
</div>

