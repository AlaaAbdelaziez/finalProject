@model IEnumerable<Product>
<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Quantity
            <th>
            <th scope="col">Image
            <th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="col">@item.ProductId</th>
                <th scope="col">@item.Title</th>
                <th scope="col">@item.Price</th>
                <th scope="col">@item.Category!.Name</th>
                <th scope="col">@item.Quantity</th>
                <th scope="col"><img height="50" width="40" src="@Url.Content(item.ImagePath)" alt="@item.Title"></th>

                <th scope="col">
                    <a href="~/Product/ViewDetails/@item.ProductId" class="btn btn-primary mx-2">View</a>
                    <a href="~/Product/Edit/@item.ProductId" class="btn btn-warning mx-2">Edit</a>
                    <a href="~/Product/Delete/@item.ProductId" class="btn btn-danger mx-2">Delete</a>
                </th>
            </tr>
        }
    </tbody>
    <tfoot>
        <a href="~/Product/Create" class="btn btn-success m-3">Add Product</a>
    </tfoot>
</table>
